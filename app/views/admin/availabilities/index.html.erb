<% if params[:tomorrow] %>
  <%= render "tomorrow",
    availabilities: @availabilities.for_tomorrow %>
<% elsif params[:week] %>
  <%= render "upcoming",
    availabilities: @availabilities.for_the_week,
    confirmed_count: @weeks_confirmed_count %>
<% else %>
  <%= render "all_availabilities",
    availabilities: @availabilities.for_the_year %>
<% end %>
