<% if params[:tomorrow] %>
  <%= render "tomorrow",
    availabilities: @calendar.tomorrow,
    tomorrow_confirmed: @calendar.tomorrow_confirmed_count %>
<% elsif params[:week] %>
  <%= render "upcoming",
    availabilities: @calendar.this_week,
    weeks_confirmed: @calendar.weeks_confirmed_count %>
<% else %>
  <%= render "all_availabilities",
    availabilities: @calendar.next_365_days %>
<% end %>
